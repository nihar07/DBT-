import java.io.BufferedReader;
import java.io.InputStreamReader;


public class dbt {

	/**
	 * @param args
	 */
	public static void main(String[] args) {
		// TODO Auto-generated method stub
		
		dbt mydbt = new dbt();
		
		String input = mydbt.entercommand();
		
		while(input.toUpperCase().contains("EXIT")==false ){
			
			
			input = mydbt.entercommand();
			
			
			
		}

	}

	public String entercommand() {
		System.out.print("DbtSQL>");
		String s = null;
 
	    try {
			BufferedReader bufferRead = new BufferedReader(
					new InputStreamReader(System.in));
			s = bufferRead.readLine();
			System.out.println(s);
		} catch (Exception e) {
			System.out.print("Please enter something good");
			// TODO: handle exception
		}
		return s;
		
	}
	
	
	//Checking statement type
	public String checktypestatement(String cs) {
		String stype = new String(); //checking statement type klike CREATE , INSERT or LOAD or SELECT
		
		
		if(cs.toUpperCase().contains("CREATE")  ){
			
		} else if(cs.toUpperCase().contains("INSERT")  ){
			System.out.print("INSERT COMMAND");
		} else if(cs.toUpperCase().contains("SELECT")  ){
			System.out.print("SELECT COMMAND");
		} else if(cs.toUpperCase().contains("LOAD")  ){
			System.out.print("LOAD COMMAND");
		}else if(cs.toUpperCase().contains("SAVE")  ){
			System.out.print("SAVE COMMAND");
		} else {
			System.out.print("Please enter something good");
		}
		
		return stype;
	}
	
	
	
	
}
